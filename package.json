{
  "scripts": {
    "dev" : "concurrently -k \"tsc -p ./server -w\" \"tsc -p ./client -w\" \"nodemon ./dist/server/app.js\"",
    "clean": "rm -rf ./dist",
    "build": "npm run build:server && npm run build:client",
    "build:client": "tsc -p ./client",
    "build:server": "tsc -p ./server && ./scripts/copy-server-views.sh",
    "postinstall": "npm run build",
    "lint": "eslint . --ext .ts",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node ./dist/server/app.js"
  },
  "nodemonConfig": {
    "watch": ["./dist/server"],
    "delay": 1000
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/node": "^20.10.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "express": "^4.18.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "helmet": "^7.1.0"
  }
}
